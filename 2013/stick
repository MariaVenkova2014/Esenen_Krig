#include <iostream>
using namespace std;

int main() {
    int l1, r1, l2, r2, l3, r3;
    if (!(cin >> l1 >> r1)) return 0;
    cin >> l2 >> r2;
    cin >> l3 >> r3;

    // Брой запалвания = брой компоненти при "сливане" на допиращи се/пресичащи се интервали
    int components = 1;        // започваме с първата клечка
    int curR = r1;             // текущ десен край на обединения интервал

    // втора клечка
    if (l2 <= curR) {
        if (r2 > curR) curR = r2; // сливане
    } else {
        components++;
        curR = r2;
    }

    // трета клечка
    if (l3 <= curR) {
        if (r3 > curR) curR = r3; // сливане
    } else {
        components++;
        curR = r3;
    }

    // Дължини
    int len1 = r1 - l1;
    int len2 = r2 - l2;
    int len3 = r3 - l3;

    int shortest = len1;
    if (len2 < shortest) shortest = len2;
    if (len3 < shortest) shortest = len3;

    int longest = len1;
    if (len2 > longest) longest = len2;
    if (len3 > longest) longest = len3;

    cout << components << "\n";
    cout << shortest << " " << longest << "\n";
    return 0;
}
