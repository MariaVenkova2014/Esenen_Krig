#include <iostream>
using namespace std;

int main() {
    long long p, n;
    cin >> p >> n;

    // 1. Full weeks count
    long long full_weeks = n / 7;

    // 2. Last day number
    int last_day = ((p - 1 + (n - 1)) % 7) + 1;

    // 3. Count of 'ะก' days (day 3 and day 6)

    // Number of 'ะก' per full week = 2 (Wednesday + Saturday)
    long long count_S = full_weeks * 2;

    // Days leftover after full weeks
    int leftover = n % 7;

    // Count how many 'ะก' days in the leftover days
    // Iterate leftover days from p to p+leftover-1 (mod 7)
    for (int i = 0; i < leftover; i++) {
        int current_day = ((p - 1 + i) % 7) + 1;
        if (current_day == 3 || current_day == 6) {
            count_S++;
        }
    }

    cout << full_weeks << "\n";
    cout << last_day << "\n";
    cout << count_S << "\n";

    return 0;
}
