#include <iostream>
#include <algorithm>
using namespace std;

int main() {
    int w[4];
    for (int i = 0; i < 4; i++) cin >> w[i];

    int minDiff = 1e9; // голямо число за начално сравнение

    // Пробваме всички комбинации на разпределение (лява ръка)
    for (int mask = 0; mask < 16; mask++) { // 2^4 = 16 комбинации
        int sumLeft = 0, sumRight = 0;
        for (int i = 0; i < 4; i++) {
            if (mask & (1 << i))
                sumLeft += w[i];
            else
                sumRight += w[i];
        }
        minDiff = min(minDiff, abs(sumLeft - sumRight));
    }

    cout << minDiff << endl;
    return 0;
}
